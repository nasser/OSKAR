
# test_case_02.osk
# simple picture definition;  primitive with transformations

Scene << Cube [ {1}
                      +(-.5, -.5, -.5) # move to origin (0,0,0)
                      @( -50, 30,   0)   # rotate
                      *( .5,  .5,  .5)   # scale down
                      +( .5,  .5,   0)   # move back to viewport
                  ]

Film :: Scene

