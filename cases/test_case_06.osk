
# test_case_06.osk
# picture definition with 2nd set of transformations 

fun(x)::sin(x);                          # function definition

slab << cube [ {150} * ( .02, .02, .5)    # scale to thin rod
                     + ( i*1.0, .5+fun(i*360)/2, 0) # move as function(iteration)
             ]
             [ {0}   * (.5, .5, .5)  ]    # scale down whole object

drawpic << slab [ {0} 
                      + (  -1, -.5,  0)   # move to center
                      @ ( -50,  30,  0)   # rotate
                      * (   1,  .5,  1)   # scale down
                      + (   1,  .5,  0)   # move back to viewport
                ]
