
# test_case_04.osk
# picture definition with iteration


slab << cube [ {5} * ( .1, .5, .5)    # scale to thin slab
                   + ( i * 1, 0, 0)   # move as function(iteration)
#                                     # 1 is total move; i goes from 0 to 1.0 
#                                     # in 5 steps
             ]


drawpic << slab [ {0}  
                      + (-.5, -.5, 0)   # move to center
                      @ ( -50, 30, 0)   # rotate
                      * ( .5, .5, .5)   # scale down
                      + ( .5,  .5, 0)   # move back to viewport
                ]